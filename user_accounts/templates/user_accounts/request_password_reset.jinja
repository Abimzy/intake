{% extends "admin_form_base.jinja" %}
{% block head_title %}Reset password{% endblock %}
{%- block header_title -%}
Request a password reset
{%- endblock header_title -%}
{% block form %}
  <p>Forgotten your password? Enter your e-mail address below, and we'll send you an e-mail allowing you to reset it.</p>

  <form method="POST" action="{{ url('account_reset_password') }}" class="password_reset">
      {% include "includes/csrf_field.jinja" %}
      {{ form.as_p() }}
      <input type="submit" value="Reset My Password" />
  </form>
{% endblock form %}