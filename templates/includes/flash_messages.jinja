
    {% block flash_messages %}
    <div class="flash_messages">
      {%- if messages -%}
      {%- for message in messages -%}
      <div class="flash_message {{ message.tags }}">
      	<div class="container">
	      	<div class="row">
	      		{{ message }}
	      	</div>
      	</div>
      </div>
      {%- endfor %}
      {%- endif %}
    </div>
    {% endblock %}